---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "¿Listo para comenzar su proyecto?",
  description = "Contáctenos hoy mismo y descubra cómo podemos ayudarle a construir el futuro.",
  buttonText = "Contáctenos",
  buttonLink = "/contacto"
} = Astro.props;
---

<section class="cta">
  <div class="cta-bg">
    <img
      src="/images/home/slide-5.jpg"
      alt=""
      loading="lazy"
    />
    <div class="cta-overlay"></div>
  </div>

  <div class="container">
    <div class="cta-content" data-animate="fade-in-up">
      <h2 class="cta-title">{title}</h2>
      <p class="cta-description">{description}</p>
      <div class="cta-actions">
        <a href={buttonLink} class="btn btn-primary">{buttonText}</a>
        <a href="tel:+526144360515" class="cta-phone">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
          </svg>
          (614) 436-0515
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    position: relative;
    padding: 8rem 0;
    overflow: hidden;
  }

  .cta-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .cta-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cta-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(10, 22, 40, 0.95) 0%,
      rgba(10, 22, 40, 0.85) 100%
    );
  }

  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--white);
    margin-bottom: 1.5rem;
  }

  .cta-description {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .cta-actions {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .cta-phone {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--white);
    font-size: 1.125rem;
    font-weight: 600;
    transition: color var(--transition-fast);
  }

  .cta-phone:hover {
    color: var(--gold-400);
  }

  .cta-phone svg {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 640px) {
    .cta {
      padding: 5rem 0;
    }

    .cta-actions {
      flex-direction: column;
    }

    .cta-actions .btn {
      width: 100%;
      max-width: 280px;
    }
  }
</style>
