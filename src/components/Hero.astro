---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  image: string;
  showCta?: boolean;
  overlay?: boolean;
  height?: 'full' | 'large' | 'medium';
}

const {
  title,
  subtitle,
  description,
  image,
  showCta = true,
  overlay = true,
  height = 'full'
} = Astro.props;

const heightClass = {
  full: 'hero-full',
  large: 'hero-large',
  medium: 'hero-medium'
}[height];
---

<section class={`hero ${heightClass}`}>
  <div class="hero-bg">
    <img src={image} alt="" class="hero-image" />
    {overlay && <div class="hero-overlay"></div>}
  </div>

  <div class="hero-content">
    <div class="container">
      {subtitle && (
        <span class="hero-subtitle" data-animate="fade-in-up">
          {subtitle}
        </span>
      )}
      <h1 class="hero-title" data-animate="fade-in-up" style="animation-delay: 100ms;">
        {title}
      </h1>
      {description && (
        <p class="hero-description" data-animate="fade-in-up" style="animation-delay: 200ms;">
          {description}
        </p>
      )}
      {showCta && (
        <div class="hero-actions" data-animate="fade-in-up" style="animation-delay: 300ms;">
          <a href="/experiencia" class="btn btn-primary">Ver Proyectos</a>
          <a href="/contacto" class="btn btn-outline">Cont√°ctenos</a>
        </div>
      )}
    </div>
  </div>

  {height === 'full' && (
    <div class="hero-scroll">
      <span>Desliza</span>
      <div class="scroll-line"></div>
    </div>
  )}
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-full {
    min-height: 100vh;
    min-height: 100dvh;
  }

  .hero-large {
    min-height: 80vh;
  }

  .hero-medium {
    min-height: 60vh;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(10, 22, 40, 0.9) 0%,
      rgba(10, 22, 40, 0.7) 50%,
      rgba(10, 22, 40, 0.5) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 2rem 0;
  }

  .hero-subtitle {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--gold-400);
    margin-bottom: 1.5rem;
    opacity: 0;
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 600;
    color: var(--white);
    line-height: 1.1;
    max-width: 1000px;
    margin: 0 auto 1.5rem;
    opacity: 0;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
    opacity: 0;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    opacity: 0;
  }

  .hero-scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    animation: fadeIn 1s ease 1s forwards;
    opacity: 0;
  }

  .scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, var(--gold-500), transparent);
    animation: scrollPulse 2s ease infinite;
  }

  @keyframes scrollPulse {
    0%, 100% {
      opacity: 1;
      transform: scaleY(1);
    }
    50% {
      opacity: 0.5;
      transform: scaleY(0.8);
    }
  }

  /* Animate elements on load */
  [data-animate="fade-in-up"] {
    animation: fadeInUp 0.8s ease forwards;
  }

  @media (max-width: 768px) {
    .hero-full {
      min-height: 100vh;
      min-height: 100svh;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .hero-actions .btn {
      width: 100%;
      max-width: 280px;
    }

    .hero-scroll {
      display: none;
    }
  }
</style>
